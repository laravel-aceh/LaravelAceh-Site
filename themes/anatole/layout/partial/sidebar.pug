.sidebar.animated.fadeInDown
  .logo-title
    .title
      img(src= url_for('images/logo@2x.png'),style="width:127px;")
      h3(title="")
        a(href="/")= config.title
      if config.subtitle
        .description
          p= config.subtitle

  ul.social-links
    if config.twitter
      li
        a(href= config.twitter, target="_blank")
          i.fa.fa-twitter
    if config.instagram
      li
        a(href= config.instagram, target="_blank")
          i.fa.fa-instagram
    if config.rss
      li
        a(href= config.rss)
          i.fa.fa-rss
    if config.weibo
      li
        a(href= config.weibo, target="_blank")
          i.fa.fa-weibo
    if config.facebook
      li
        a(href= config.facebook, target="_blank")
          i.fa.fa-facebook
    if config.github
      li
        a(href= config.github, target="_blank")
          i.fa.fa-github
  include footer
